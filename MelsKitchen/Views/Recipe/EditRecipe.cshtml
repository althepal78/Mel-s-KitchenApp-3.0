@model Recipe

<div>
    <form asp-controller="Recipe" asp-action="Edit" asp-route-id="@Model.RecipeID" method="post">
        <div>
            <label asp-for="RecipeName"></label>
            <input asp-for="RecipeName" />
            <span asp-validation-for="RecipeName"></span>
        </div>
        <div>
            <label asp-for="Ingredients"></label>
            <input asp-for="Ingredients" />
            <span asp-validation-for="Ingredients"></span>
        </div>
        <div>
            <label asp-for="Directions"></label>
            <input asp-for="Directions" />
            <span asp-validation-for="Directions"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">Edit Recipe</button>
    </form>
</div>

