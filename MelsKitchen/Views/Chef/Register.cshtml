@model Chef

<div class="container">

    <div class="d-flex align-content-center justify-content-between">

        <div class="card">

            <div class="card-header">
                <h3 class="d-flex justify-content-between"> Register <span> <i class="fas fa-user-plus"></i> </span></h3>
            </div>

            <div class="card-body">
                <form asp-controller="Chef" asp-action="CreateChef" method="post">


                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                        </div>
                        <input asp-for="FirstName" placeholder="First Name" />
                        <span class="bg-danger text-warning" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                        </div>
                        <input asp-for="LastName" placeholder="Last Name" />
                        <span class="bg-dark text-warning" asp-validation-for="LastName"></span>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-envelope"></i> </span>
                        </div>
                        <input asp-for="Email" placeholder="Email@example.com" />
                        <span class="bg-danger text-warning" asp-validation-for="Email"></span>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
                        </div>
                        <input asp-for="Password" placeholder="Password" />
                        <span class="bg-danger text-warning" asp-validation-for="Password"></span>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
                        </div>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span class="bg-danger text-warning" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <div>
                        <input class="btn btn-outline-dark btn-warning float-lg-right" type="submit" value="Register" />
                    </div>
                </form>
            </div>

            <div class="card-footer card">
                <p>If you have an account, Sign in</p>
            </div>


        </div>

    </div>

</div>