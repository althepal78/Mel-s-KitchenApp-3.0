@model Login

    <div class="container">

        <div class="d-flex justify-content-between">

            <div class="card">

                <div class="card-header">
                    <h3 class="d-flex justify-content-between"> Sign In <span><i class="fas fa-sign-in-alt"></i></span></h3> 
                </div>

                <div class="card-body">
                    <form asp-controller="Chef" asp-action="LoggedIn" method="post">

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fas fa-envelope"></i> </span>
                            </div>
                            <input  asp-for="LoginEmail" placeholder="Email@example.com" />
                            <span class="bg-danger text-warning mt-2" asp-validation-for="LoginEmail"></span>
                        </div>

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
                            </div>
                            <input asp-for="LoginPassword" placeholder="Password" />
                            <span class="bg-danger text-warning" asp-validation-for="LoginPassword"></span>
                        </div>

                        <div>
                            <input class="btn btn-outline-dark btn-warning float-lg-right" type="submit" value="Log In" />
                        </div>
                    </form>
                </div>

                <div class="card-footer card">
                    <p>If you don't have an account, Register</p>
                </div>


            </div>

        </div>

    </div>